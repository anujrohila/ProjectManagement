@model ProjectManagement.Domain.tblMemberDTO
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="~/Content/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.min.css" rel="stylesheet" />
    <link href="~/Content/css/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/css/theme/default.css" rel="stylesheet" id="theme" />
    <!-- ================== END BASE CSS STYLE ================== -->
</head>
<body>
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade in"><span class="spinner"></span></div>
    <!-- end #page-loader -->

    <div class="login-cover">
        <div class="login-cover-image"><img src="~/Content/img/login-bg/bg-1.jpg" data-id="login-cover-image" alt="" /></div>
        <div class="login-cover-bg"></div>
    </div>
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-v2" data-pageload-addclass="animated flipInX">
            <!-- begin brand -->
            @*<div class="login-header">
                    <div class="brand">
                        <span class="logo"></span>
                        <small></small>
                    </div>
                    <div class="icon">
                        <i class="fa fa-sign-in"></i>
                    </div>
                </div>*@
            <!-- end brand -->
            <div class="login-content">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="form-group m-b-20">
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-lg", @placeholder = "Email Address", @Value = Request.QueryString["e"], @autofocus = "autofocus" })
                    </div>
                    <div class="form-group m-b-20">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password", @maxlength = 30 })
                    </div>
                    <div class="checkbox m-b-20">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe) Remember Me
                        </label>
                    </div>
                    <div class="login-buttons">
                        <button type="submit" class="btn btn-success btn-block btn-lg">Sign me in</button>
                    </div>

                }
            </div>
        </div>
        <!-- end login -->



    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Content/plugins/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Content/plugins/jquery/jquery-migrate-1.1.0.min.js"></script>
    <script src="~/Content/plugins/jquery-ui/ui/minified/jquery-ui.min.js"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!--[if lt IE 9]>
        <script src="~/Content/crossbrowserjs/html5shiv.js"></script>
        <script src="~/Content/crossbrowserjs/respond.min.js"></script>
        <script src="~/Content/crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Content/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/plugins/jquery-cookie/jquery.cookie.js"></script>
    <!-- ================== END BASE JS ================== -->
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="~/Content/js/login-v2.demo.min.js"></script>
    <script src="~/Content/js/apps.min.js"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->
    <script>
        $(document).ready(function () {
            App.init();
            LoginV2.init();
        });
    </script>
</body>
</html>

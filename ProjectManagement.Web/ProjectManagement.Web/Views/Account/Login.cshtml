@model ProjectManagement.Domain.tblLoginDTO
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="login-content">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
        }
        <div class="form-group m-b-20">
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-lg", @placeholder = "Email Address", @autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
        <div class="form-group m-b-20">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password", @maxlength = 30 })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="checkbox m-b-20">
            <label>
                @Html.CheckBoxFor(m => m.RememberMe) Remember Me
            </label>
        </div>
        <div class="login-buttons">
            <button type="submit" class="btn btn-success btn-block btn-lg">Sign me in</button>
        </div>
    }
</div>

@using Telerik.Web.Mvc.UI;
@model ProjectManagement.Domain.tblProjectDTO

<div class="row">
    @using (Html.BeginForm("Save", "Project", FormMethod.Post, new { id = "frmProject", @class = "form-horizontal" }))
    {
        <div class="col-md-12 ui-sortable">
            <!-- begin panel -->
            <div class="panel-body">
                @Html.HiddenFor(model => model.ProjectId)
                @Html.HiddenFor(model => model.StratDateTime)
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Title<span class="spanError">*</span></label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Title, new { @placeholder = "Title", @class = "form-control", autofocus = "autofocus" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Site Name<span class="spanError">*</span></label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.SiteName, new { @placeholder = "Site Name", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Catalog<span class="spanError">*</span></label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Catalog, new { @placeholder = "Catalog", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Address</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Address, new { @placeholder = "Address", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Description</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Description, new { @placeholder = "Description", @class = "form-control" })
                    </div>
                </div>
           
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <button class="btn btn-sm btn-success" type="button" onclick="SubmitProjectDetails();">Submit</button>
                                    </div>
                </div>
            </div>
        </div>
            <!-- end panel -->

    }
</div>

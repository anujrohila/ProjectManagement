@model ProjectManagement.Domain.GroupByItemDTO
@using System.Web.Mvc
@using Telerik.Web.Mvc.UI
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Save", "MaterialGroup", FormMethod.Post, new { id = "frmMaterialGroup", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(model => model.GrpIdItem)
                    <div class="form-group">
                        <label class="col-md-5 control-label"></label>
                        <div class="col-md-6">
                            @Html.ValidationSummary(false)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 control-label">Material Group Name<span class="spanError">*</span></label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.GroupItemName, new { @placeholder = "Material Group Name", @class = "form-control", autofocus = "autofocus" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5 control-label"></label>
                        <div class="col-md-6">
                            <button class="btn btn-sm btn-success" type="button" onclick="SubmitGroupDetails();">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>
  <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
@model List<ProjectManagement.Domain.tblReportDTO>
@{
    Layout = null;
}
<style>
    .tableReportContet .th {
        padding: 5px;
    }
</style>
@if (Model != null)
{
    if (Model != null && Model.Count > 0)
    {
    <input value="Print" type="button" class="btn btn-sm btn-success" onclick="PrintObject();" />
    <div class="printable" style="padding-top: 10px">
        <table id="tableReportContet" border="1" style="width: 100%; padding: 5px" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <td colspan="6" style="font-weight: bold; text-align: center; vertical-align: middle; padding: 5px; font-size: 20px">
                        @ProjectManagement.Domain.ApplicationMember.SelectedProjectDetails.Catalog
                    </td>
                </tr>
                <tr id="trLedgerName" style="display: none">
                    <td colspan="6" style="font-weight: bold; text-align: left; vertical-align: middle; padding: 5px;">
                        <span id="spanLedgerText"></span>
                    </td>
                </tr>
                <tr>
                    <th>Vr No </th>
                    <th>Mode Pvt</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th style="text-align: right; font-weight: bold">Credit</th>
                    <th style="text-align: right; font-weight: bold">Debit</th>
                </tr>
                <tr style="text-align: right; font-weight: bold">
                    <td colspan="4">Opening Balance</td>
                    <td>
                        @Model[0].CrOpeningBalance
                    </td>
                    <td>
                        @Model[0].DrOpeningBalance
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var monthGroup in Model.GroupBy(m => m.TransactionDateString))
                {
                    <tr>
                        <td colspan="6" style="font-weight: bold">@monthGroup.Key</td>
                    </tr>
                    foreach (var reportData in Model.Where(tran => tran.TransactionDateString == monthGroup.Key))
                    {
                    <tr>
                        <td>@reportData.VrNo</td>
                        <td>@string.Format("{0}-{1}", reportData.ModePaymentReceipt.Substring(0, 4), reportData.RecPay.Substring(0, 3))</td>
                        <td>@reportData.DDate.Value.ToString("dd-MM-yyyy")</td>
                        <td>@reportData.Description</td>
                        <td style="text-align: right">
                            @reportData.CrAmount
                        </td>
                        <td style="text-align: right">
                            @reportData.DrAmount
                        </td>
                    </tr>
                    }
                }

                <tr style="text-align: right; font-weight: bold">
                    <td colspan="4"></td>
                    <td style="text-align: right">
                        @Model[0].CrTotalAmount
                    </td>
                    <td>
                        @Model[0].DrTotalAmount
                    </td>
                </tr>
                <tr style="text-align: right; font-weight: bold">
                    <td colspan="4">Closing Balance</td>
                    <td>
                        @Model[0].CrClosingBalance
                    </td>
                    <td>
                        @Model[0].DrClosingBalance
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    }
    else
    {
    <span>No data found.</span>
    }
}
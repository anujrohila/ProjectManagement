@model ProjectManagement.Web.TrialReportModel
@using Telerik.Web.Mvc.UI;
@using ProjectManagement.Domain;
@{
    ViewBag.Title = "Trial Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <!-- begin col-6 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div data-sortable-id="form-stuff-1" class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title">Trial Book</h4>
            </div>
            <div class="panel-body form-horizontal ">
                @if (Model != null)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Vr No </th>
                                <th>Mode Pvt</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th style="text-align: right; font-weight: bold">Credit</th>
                                <th style="text-align: right; font-weight: bold">Debit</th>
                            </tr>
                            <tr style="text-align: right; font-weight: bold">
                                <td colspan="4">Opening Balance</td>
                                <td>
                                    @Model[0].CrOpeningBalance
                                </td>
                                <td>
                                    @Model[0].DrOpeningBalance
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reportData in Model)
                            {
                                <tr>
                                    <td>@reportData.VrNo</td>
                                    <td>@string.Format("{0}-{1}", reportData.ModePaymentReceipt.Substring(0, 4), reportData.RecPay.Substring(0, 3))</td>
                                    <td>@reportData.DDate.Value.ToString("dd-MM-yyyy")</td>
                                    <td>@reportData.Description</td>
                                    <td style="text-align: right">
                                        @reportData.CrAmount
                                    </td>
                                    <td style="text-align: right">
                                        @reportData.DrAmount
                                    </td>
                                </tr>
                            }
                            <tr style="text-align: right; font-weight: bold">
                                <td colspan="4"></td>
                                <td style="text-align: right">
                                    @Model[0].CrTotalAmount
                                </td>
                                <td>
                                    @Model[0].DrTotalAmount
                                </td>
                            </tr>
                            <tr style="text-align: right; font-weight: bold">
                                <td colspan="4">Closing Balance</td>
                                <td>
                                    @Model[0].CrClosingBalance
                                </td>
                                <td>
                                    @Model[0].DrClosingBalance
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <span>No data found.</span>
                }
            </div>
        </div>
    </div>
    <!-- end panel -->
</div>
<script type="text/javascript">
    ActivateSelectedMenu('menuReport');
</script>
